<% if courses %>
  <div class="row">
    <% courses.each do |course| %>
      <div class="course">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= course.api_courseimage_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="course-title"><%= course.api_coursename %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>